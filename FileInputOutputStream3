package try1;

import java.util.Scanner;

public class T3 {

	public static void main(String[] args) {
		// 从键盘接收数据
		Scanner scan = new Scanner(System.in);
		
		System.out.println("next方式接收字符串： ");
		if (scan.hasNext()) {
			String str1 = scan.next();
			System.out.println("输入的数据为： " + str1);
		}
		scan.close();

	}

}

